# root configuration file for editorconfig
root = true

# default settings
[*]
# use spaces for indentation
indent_style = space
# set the number of spaces per indentation level
indent_size = 2
# file character encoding
charset = utf-8
# use line feed as the end-of-line character
end_of_line = lf
# ensure every file ends with a newline
insert_final_newline = true
# remove any trailing whitespace at the end of lines
trim_trailing_whitespace = true

# override settings for specific file types
[{*.go,go.mod,go.sum,Makefile,Makefile.*,.gitmodules}]
indent_style = tab
indent_size = 8

[*.md]
trim_trailing_whitespace = false

[*.{py,java,sql,php,rs,c,h,cpp,cc,m,mm,swift,pl,pm}]
indent_style = space
indent_size = 4
